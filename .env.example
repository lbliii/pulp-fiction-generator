# Pulp Fiction Generator Configuration

# Ollama Configuration
OLLAMA_HOST=http://localhost:11434
OLLAMA_MODEL=llama3.2
OLLAMA_THREADS=8
OLLAMA_GPU_LAYERS=32
OLLAMA_CTX_SIZE=8192
OLLAMA_BATCH_SIZE=512

# Application Settings
DEBUG=false
LOG_LEVEL=info
OUTPUT_DIR=./output
GENRES_DIR=./pulp_fiction_generator/genres

# Generation Settings
MAX_RETRY_COUNT=3
GENERATION_TIMEOUT=300  # seconds
TEMPERATURE=0.7
TOP_P=0.9

# Agent Settings
ENABLE_AGENT_DELEGATION=false
AGENT_VERBOSE=true

# Model Cache Settings
ENABLE_CACHE=true
CACHE_DIR=./.cache
MAX_CACHE_SIZE=1024  # MB

# External API Keys
SERPER_API_KEY=  # Get from https://serper.dev for web search 